	<script type="text/javascript">
		$(document).ready(function() {
			$('#valor').mask('000.000.000.000.000,00', {reverse: true});
			$('#valorOriginal').mask('000.000.000.000.000,00', {reverse: true});
			$("#data_atual").mask("00/00/0000");
			$("#data_vencimento").mask("00/00/0000");
			
			
			$("#receberParcial").click(function(){
				
				var uid = $("#uid_usuario").val();
				var id_lancamento = $("#id_lancamento").val();
				var id_empresa = $("#id_empresa").val();			
				var id_cliente = $("#id_cliente").val();
				var valor = $("#valor").val();	
				
				if(id_cliente=="0" || id_cliente==""){
					swal("Informe o Cliente");
					return;
				}
				if(valor===undefined || valor==""){
					swal("Informe o Valor");
					return;
				}
				var documento = $("#documento").val();				
				var data_lancamento = $("#data_atual").val();	
				var data_vencimento = $("#data_vencimento").val();					
				var observacao = $("#observacao").val();					
				
				var valorOriginal = $("#valorOriginal").val();			
				
				if( valor < valorOriginal){
					documento = documento +'-1' 
				}
				
				// Valores como strings no formato brasileiro
				let valor1 = valorOriginal;
				let valor2 = valor;

				console.log(valor1)
				console.log(valor2)
				// Convertendo para número (formato internacional: ponto decimal)
				let num1 = parseFloat(valor1.replace(".", "").replace(",", "."));
				let num2 = parseFloat(valor2.replace(".", "").replace(",", "."));

				// Subtraindo
				let valorRestante = num1 - num2;

				//let valorRestante = valorOriginal.replace(',','.') - valor.replace(',','.');
				//let valorRestante = valorOriginal - valor;
								
				valorRestante = valorRestante.toFixed(2);
				console.log(valorRestante)
				
			
				$.post('/adm/receberLancamentoParcial', {
					id_lancamento: id_lancamento,
					uid_usuario: uid,
					id_empresa: id_empresa,
					id_cliente: id_cliente,
					documento: documento,
					data: data_lancamento,
					data_vencimento: data_vencimento, 
					valor: valorRestante.replace(',','.'),
					observacao: observacao
					
				}, function(resposta) {
					swal(resposta);
					setTimeout(() => {
					   window.location.href = "/adm/lancamentos/"+uid;	
					}, "2000");
				});
				
			})
		})
	</script>
