<script>

    function getCookie(name) {
        let cookies = document.cookie.split("; ");
        for (let i = 0; i < cookies.length; i++) {
            let cookie = cookies[i];
            let [cookieName, cookieValue] = cookie.split("=");
            if (cookieName === name) {
                return cookieValue;
            }
        }
        return null;
    }
		
	let a_vendas = document.querySelector("#link_vendas");
	a_vendas.href = "/user/vendas/"+ getCookie("user");

</script>